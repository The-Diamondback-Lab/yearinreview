{
  "hosting": {
    "cleanUrls": true,
    "postdeploy": [
      "rm -rf build/"
    ],
    "predeploy": [
      "NODE_ENV=production"
    ],
    "public": "_public",
    "ignore": [
      "**/.*",
      "**/node_modules/**",
      "babel.config.js",
      "firebase.json",
      "jest.config.js"
    ],
    "redirects": [
      {
        "source": "/:year/:month/:day/:title",
        "destination": "https://dbknews.com/:year/:month/:day/:title",
        "type": 301
      },
      {
        "source": "/2017",
        "destination": "http://yearinreview.diamondbacklab.com",
        "type": 302
      },
      {
        "source": "/repo",
        "destination": "https://github.com/The-Diamondback-Lab/yearinreview",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "trailingSlash": false
  }
}